{
    "name": "schemafx",
    "version": "0.0.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "author": "SchemaFX",
    "description": "Build Without Boundaries.",
    "bugs": {
        "url": "https://github.com/schemafx/schemafx/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/schemafx/schemafx.git"
    },
    "scripts": {
        "build": "npm run build:clean && tsc -b --clean tsconfig.build.json && tsc -b tsconfig.build.json",
        "build:clean": "node -e \"const fs = require('fs'); if (fs.existsSync('dist')) fs.rmSync('dist', { recursive: true, force: true })\"",
        "start": "node .",
        "dev": "tsx watch dev/dev.ts --watch ./src --watch ./dev",
        "prepare": "npm run build",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "test": "npm run test:types && npm run lint && npm run test:unit",
        "test:watch": "vitest",
        "test:unit": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:types": "tsc --noEmit"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "dependencies": {
        "@duckdb/node-api": "^1.4.2-r.1",
        "@fastify/compress": "^8.3.0",
        "@fastify/cors": "^11.1.0",
        "@fastify/helmet": "^13.0.1",
        "@fastify/jwt": "^10.0.0",
        "@fastify/rate-limit": "^10.3.0",
        "@fastify/swagger": "^9.6.1",
        "@fastify/swagger-ui": "^5.2.3",
        "fastify": "^5.6.0",
        "fastify-healthcheck": "^5.1.0",
        "fastify-type-provider-zod": "^6.0.0",
        "knex": "^3.1.0",
        "lru-cache": "^11.2.4",
        "zod": "^4.1.9"
    },
    "devDependencies": {
        "@types/node": "^24.1.0",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "@vitest/coverage-v8": "^4.0.15",
        "eslint": "^9.35.0",
        "eslint-config-flat-gitignore": "^2.1.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-sonarjs": "^3.0.5",
        "prettier": "^3.6.2",
        "tsx": "^4.20.3",
        "typescript": "^5.9.3",
        "vitest": "^4.0.15"
    },
    "type": "module",
    "license": "Apache-2.0"
}
